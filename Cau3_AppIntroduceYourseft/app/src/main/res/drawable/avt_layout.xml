<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/layout_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="1000dp"/> <!-- Bán kính bo tròn cho viền -->
    <solid android:color="#FFFFFF"/> <!-- Màu nền cho layout -->
    <stroke android:width="2dp" android:color="#FF0000"/> <!-- Độ dày và màu của viền -->
    <padding android:left="10dp" android:top="10dp"
        android:right="10dp" android:bottom="10dp"/> <!-- Khoảng cách giữa viền và nội dung bên trong -->
</shape>